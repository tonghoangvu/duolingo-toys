{
	"manifest_version": 3,
	"name": "Duolingo Toys",
	"version": "1.0",
	"action": {
		"default_icon": {
			"16": "img/icon-16.png",
			"32": "img/icon-32.png",
			"48": "img/icon-48.png",
			"128": "img/icon-128.png"
		}
	},
	"default_locale": "en",
	"description": "__MSG_@description__",
	"icons": {
		"16": "img/icon-16.png",
		"32": "img/icon-32.png",
		"48": "img/icon-48.png",
		"128": "img/icon-128.png"
	},
	"background": {
		"service_worker": "js/background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://*.duolingo.com/*"],
			"js": ["js/util.js", "js/content.js"]
		}
	],
	"options_page": "options.html",
	"permissions": ["activeTab", "scripting", "storage"]
}
